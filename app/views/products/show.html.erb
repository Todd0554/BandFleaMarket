<p id="notice"><%= notice %></p>
<%= render 'shared/cart' %>


<%= image_tag(@product.newsizeimage)  %>
<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @product.user_id %>
</p>

<p>
  <strong>Sold:</strong>
  <%= @product.sold %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category.category %>
</p>
<p>
  <strong>Sort:</strong>
  <%= @product.sort.sort %>
</p>

<% if user_signed_in? %>
<% if @product.sold == false && current_user.id != @product.user_id %>
  <%= button_to 'Buy now', order_path %>
<% elsif current_user.id == @product.user_id %>
        You can't buy product belongs to you.
<% else %>
  <p>SOLD</p>
<% end %>
<% else %>
<%= link_to "Sign in to buy", new_user_session_path, style:"color:#32CCCC" %>
<% end %>

<br>


<%= link_to 'Back', products_path %>

