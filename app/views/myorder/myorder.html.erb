
<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Title</th>
      <th>Buyer</th>
      <th>Seller</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
<% @bought_items.each do |i| %>
      <tr>
        <td><%= image_tag(Product.find(i.product_id).picture, height: "150") %>
        <td><%= Product.find(i.product_id).title %></td>
        <td><%= User.find(i.buyer_id).username %></td>
        <td><%= User.find(i.seller_id).username %></td>
        <td><%= Product.find(i.product_id).price %></td>  
      </tr>
<% end %>
</tbody>
</table>